[
  <% commits_json = [] %>
  <% commits.each_with_index do |commit, index| %>
    <% commits_json << Fixture.new('repositories/commit.json.erb',
                         id:                  index,
                         author:              commit[:author],
                         repo_owner:          repo_owner,
                         repo_name:           repo_name,
                         created_at:          commit[:created_at] || Chronic.parse("1.minute.ago")
                       ).to_s %>
  <% end %>
  <%= commits_json.join(", ") %>
]
